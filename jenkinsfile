pipeline {
    agent {
        docker{
            image 'python:3.9'
        }
    }
    stages{
        stage('Start'){
            steps{
                echo 'starting'
            }
        }
        stage('Check Version'){
            steps{
                sh 'which python3 || which python'
                sh 'python3 --version || python --version'
            }
        }
        stage('Run Script'){
            steps{
                sh 'python main.py'
            }
        }
    }
}